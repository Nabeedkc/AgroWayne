<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".SelectCrop">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/splash_title_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="@string/crop_title"
                android:textAlignment="center"
                android:textColor="@color/dark_text"
                android:textSize="30sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:id="@+id/linear_checks"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/check_tea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/crop_tea"
                    android:buttonTint="@android:color/darker_gray"
                    android:textColor="@color/dark_light_text"
                    android:textSize="20sp"/>
                <CheckBox
                    android:id="@+id/check_rice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/crop_rice"
                    android:buttonTint="@android:color/darker_gray"
                    android:textColor="@color/dark_light_text"
                    android:textSize="20sp"/>
                <CheckBox
                    android:id="@+id/check_coffee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/crop_coffee"
                    android:buttonTint="@android:color/darker_gray"
                    android:textColor="@color/dark_light_text"
                    android:textSize="20sp"/>
                <CheckBox
                    android:id="@+id/check_bpepper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/crop_bpepper"
                    android:buttonTint="@android:color/darker_gray"
                    android:textColor="@color/dark_light_text"
                    android:textSize="20sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    app:cardElevation="3dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp">
                    <ImageButton
                        android:id="@+id/prev_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:src="@drawable/ic_next"
                        android:tint="@color/next_icon"
                        android:rotation="180"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    app:cardElevation="3dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp">
                    <ImageButton
                        android:id="@+id/next_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:src="@drawable/ic_next"
                        android:tint="@color/next_icon"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>